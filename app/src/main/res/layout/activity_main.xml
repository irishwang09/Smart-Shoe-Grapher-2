<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/bg"
    tools:context=".MainActivity">


        <fragment
            android:name="com.mattmellor.smartshoegrapher.UdpSettingsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/client_fragment_layout"
            tools:layout="@layout/udp_client_fragment_layout" />

        <fragment
            android:name="com.mattmellor.smartshoegrapher.UdpStartStopFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stream_control_fragment"
            tools:layout="@layout/udp_stream_control_fragment" />

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.mattmellor.smartshoegrapher.GraphFragment"
            android:id="@+id/graph_fragment"
            tools:layout="@layout/graph_fragment" />


</LinearLayout>
